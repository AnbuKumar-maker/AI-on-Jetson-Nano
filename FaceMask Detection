   "source": [
    "###Relay function\n",
    "import RPi.GPIO as GPIO\n",
    "import time\n",
    "\n",
    "# Pin Definitions\n",
    "green_pin = 18  # BOARD pin 12, BCM pin 18 IN1 - Green LED\n",
    "red_pin = 23  # BOARD pin 16, BCM pin 23 IN1 - Red LED & Buzzer\n",
    "\n",
    "GPIO.setmode(GPIO.BCM)\n",
    "\n",
    "GPIO.setup(green_pin, GPIO.OUT, initial=GPIO.HIGH)\n",
    "GPIO.setup(red_pin, GPIO.OUT, initial=GPIO.HIGH)\n",
    "\n",
    "print(\"Starting demo now! Press CTRL+C to exit\")\n",
    "try:\n",
    "    while True:\n",
    "        if(prediction_widget.value == 'mask_on'):\n",
    "            # Pass Mode \n",
    "            GPIO.setup(green_pin, GPIO.OUT, initial=GPIO.LOW)\n",
    "            GPIO.setup(red_pin, GPIO.OUT, initial=GPIO.HIGH)\n",
    "            print('Entry Accepted')\n",
    "            \n",
    "        if(prediction_widget.value == 'mask_off'):\n",
    "            # Alert\n",
    "            GPIO.setup(green_pin, GPIO.OUT, initial=GPIO.HIGH)\n",
    "            GPIO.setup(red_pin, GPIO.OUT, initial=GPIO.LOW)\n",
    "            print('Entry Rejected')\n",
    "            time.sleep(5)\n",
    "        \n",
    "except KeyboardInterrupt:\n",
    "    GPIO.setup(green_pin, GPIO.OUT, initial=GPIO.HIGH)\n",
    "    GPIO.setup(red_pin, GPIO.OUT, initial=GPIO.HIGH)\n",
    "    \n",
    "finally:\n",
    "    GPIO.cleanup()"
   ]
  }
